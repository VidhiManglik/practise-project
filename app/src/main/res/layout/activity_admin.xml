<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="gtbit.retro06.www.sikkimelectricityboard.AdminActivity">
    <Button
        android:id="@+id/meterreading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#448AFF"
        android:text="Meter Reading Upload"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="25sp"
        android:textAlignment="textStart"
        android:fontFamily="serif"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="10sp"
        android:layout_weight="1">
    </Button>
    <Button
        android:id="@+id/circularupdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Circular Update"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="25sp"
        android:fontFamily="serif"
        android:textAlignment="textStart"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="10sp"
        android:background="#1A237E"
        android:layout_weight="1">
    </Button>
    <Button
        android:id="@+id/viewreplyquery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#448AFF"
        android:layout_weight="1"
        android:padding="5sp"
        android:text="View and Reply Query"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="25sp"
        android:textAlignment="textStart"
        android:fontFamily="serif"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="10sp"
        android:elevation="5sp">
    </Button>
    <Button
        android:id="@+id/useraccmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1A237E"
        android:layout_weight="1"
        android:padding="5sp"
        android:text="User Acc. Maintenance"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="25sp"
        android:textAlignment="textStart"
        android:fontFamily="serif"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="10sp">
    </Button>
    <Button
        android:id="@+id/adminmain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#448AFF"
        android:layout_weight="1"
        android:padding="5sp"
        android:text="Admin Maintenance"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textSize="25sp"
        android:textAlignment="textStart"
        android:fontFamily="serif"
        android:layout_marginVertical="5sp"
        android:layout_marginHorizontal="10sp">
    </Button>
</LinearLayout>
